<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AulaGo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 1. Mantemos o colorPrimary para botões e caixas de texto ativadas -->
        <item name="colorPrimary">@color/colorPrimaryCustom</item>

        <!-- 2. NOVO: FORÇA a cor de elementos de controle ATIVADOS (Switch e Seletor/Cursor) -->
        <item name="colorControlActivated">@color/colorPrimaryCustom</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#DD6D2F</item>
        <item name="colorSecondaryVariant">#FF9800</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/edittext_box_stroke_color_selector</item>

        <item name="textInputStyle">@style/CustomTextInputLayout.BlackHint</item>
    </style>

    <style name="CustomTextInputLayout.BlackHint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="hintTextColor">@android:color/black</item>

    </style>

    <style name="BlueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="backgroundTint">#219EBC</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Theme.AulaGo" parent="Base.Theme.AulaGo" />
</resources>
